{{#if addNewAnnouncement}}
  <h1>New Announcement</h1>
  <form>
    <div class="form-group">
      <label for="name">Name</label>
      {{input value=name id="name"}}
    </div>

    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title"}}
    </div>

    <div class="form-group">
      <label for="message">Message</label>
      {{input value=message id="message"}}
    </div>
    <button {{action 'save1'}}>Save</button>
  </form>
{{else}}
  <button {{action 'announcementFormShow'}}>New Announcement</button>
  {{/if}}
